  "oclif": {
    "commands": "./lib/src/commands",
    "bin": "sf",
    "topics": {
      "flow": {
        "description": "Commands to find and fix potential bugs in Salesforce Flows."
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "https://github.com/Lightning-Flow-Scanner/lightning-flow-scanner-sfdx.git",
