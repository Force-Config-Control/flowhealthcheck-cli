    "@oclif/dev-cli": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "1.4.1",
    "@salesforce/ts-sinon": "^1.3.18",
    "@sinonjs/fake-timers": "^7.1.2",
    "@types/chai": "^4",
